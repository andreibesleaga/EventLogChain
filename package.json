{
  "name": "event-log-chain",
  "version": "1.0.0",
  "description": "Ethereum blockchain remote events logger with ERC20 token",
  "author": "Andrei Besleaga",
  "license": "MIT",
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "test:integration": "truffle test test/Integration.test.js",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "migrate:verify": "truffle migrate --f 3 --to 3",
    "ganache": "ganache --port 7545 --chain.chainId 1337",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js'",
    "gas-analysis": "truffle exec scripts/gas-analysis.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.16",
    "@truffle/hdwallet-provider": "^2.1.15",
    "chai": "^4.3.10",
    "ganache": "^7.9.2",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "truffle": "^5.11.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}